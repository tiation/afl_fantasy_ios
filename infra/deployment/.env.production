# AFL Fantasy Platform - Production Environment Variables
# Copy to each VPS and customize as needed

# ===== API Server (docker.sxc.codes - 145.223.22.7) =====
NODE_ENV=production
API_PORT=5000
DASHBOARD_PORT=3000
API_HOST=0.0.0.0

# Database (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
SUPABASE_SERVICE_KEY=[YOUR-SERVICE-KEY]

# Python Scraper Service
PYTHON_SCRAPER_URL=http://145.223.22.9:8000
PYTHON_SCRAPER_API_KEY=your-internal-api-key

# Redis Cache (if using external)
REDIS_URL=redis://145.223.22.14:6379

# Session & Security
JWT_SECRET=your-very-secure-jwt-secret-change-this
SESSION_SECRET=your-session-secret-change-this
CORS_ORIGIN=https://docker.sxc.codes,http://localhost:3000

# External APIs
AFL_API_KEY=your-afl-api-key-if-needed
CHAMPION_DATA_KEY=your-champion-data-key

# ===== Scraper Server (docker.tiation.net - 145.223.22.9) =====
PYTHON_ENV=production
SCRAPER_PORT=8000
SCRAPER_HOST=0.0.0.0

# Selenium Configuration
SELENIUM_HEADLESS=true
CHROME_DRIVER_PATH=/usr/bin/chromedriver
DISPLAY=:99

# Scraping Configuration
MAX_WORKERS=4
SCRAPE_DELAY=3
RETRY_ATTEMPTS=3
CACHE_TTL=3600

# Database (same as API server)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.supabase.co:5432/postgres

# Scheduler Settings
ENABLE_SCHEDULER=true
SCRAPE_SCHEDULE_HOUR=6,18  # Run at 6 AM and 6 PM
SCRAPE_SCHEDULE_TIMEZONE=Australia/Melbourne

# ===== Database Server (supabase.sxc.codes - 93.127.167.157) =====
# Managed by Supabase - configure via dashboard

# ===== Monitoring (grafana.sxc.codes - 153.92.214.1) =====
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password
PROMETHEUS_SCRAPE_INTERVAL=15s

# Elasticsearch Configuration (elastic.sxc.codes - 145.223.22.14)
ELASTICSEARCH_URL=http://145.223.22.14:9200
ELASTICSEARCH_INDEX=afl_fantasy_players

# ===== Feature Flags =====
ENABLE_WEBSOCKET=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m

# ===== Logging =====
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/afl-fantasy

# ===== Performance =====
NODE_OPTIONS=--max-old-space-size=2048
PM2_INSTANCES=2
PYTHON_WORKERS=4
