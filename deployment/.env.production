# AFL Fantasy Platform - Production Environment
# Server: docker.sxc.codes (145.223.22.7)

# Environment
NODE_ENV=production
PYTHON_ENV=production

# API Server (Node.js)
API_PORT=5000
API_HOST=0.0.0.0

# Database (Supabase on supabase.sxc.codes)
SUPABASE_URL=https://supabase.sxc.codes
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE
SUPABASE_SERVICE_KEY=YOUR_SUPABASE_SERVICE_KEY_HERE
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@93.127.167.157:5432/afl_fantasy

# Redis (for caching and queues)
REDIS_URL=redis://redis:6379

# Scraper Service (Python)
SCRAPER_PORT=8000
SCRAPER_HOST=0.0.0.0
SCRAPER_WORKERS=4
SCRAPER_TIMEOUT=300
SCRAPER_BATCH_SIZE=10
SCRAPER_MAX_RETRIES=3

# Selenium/Chrome Options
HEADLESS_CHROME=true
CHROME_NO_SANDBOX=true
CHROME_DISABLE_DEV_SHM_USAGE=true

# Authentication
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHAR_STRING
JWT_EXPIRY=7d
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_STRING

# CORS
CORS_ORIGIN=http://docker.sxc.codes,http://docker.tiation.net,http://145.223.22.7,http://145.223.22.9

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Grafana on grafana.sxc.codes)
GRAFANA_URL=http://153.92.214.1:3000
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/afl-fantasy/app.log

# External APIs
AFL_API_URL=https://api.afl.com.au
AFL_API_KEY=YOUR_AFL_API_KEY_IF_NEEDED

# Notification Settings (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_FROM=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=
EMAIL_SMTP_USER=
EMAIL_SMTP_PASS=

# Feature Flags
ENABLE_AUTO_SCRAPING=true
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_CACHE=true

# Performance
MAX_CONCURRENT_SCRAPERS=5
CACHE_TTL=3600
DB_POOL_SIZE=20
