# AFL Fantasy Platform Environment Configuration
# Copy this file to .env and configure for your deployment

# Application Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/afl_fantasy
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=afl_fantasy
PGHOST=postgres

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://redis:6379

# Security Configuration (generate secure values for production)
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here

# Optional: AFL Fantasy Authentication (for real user data)
AFL_FANTASY_USERNAME=your_username
AFL_FANTASY_PASSWORD=your_password

# Optional: DFS Australia API (for enhanced statistics)
DFS_AUSTRALIA_API_KEY=your_api_key

# Optional: OpenAI API (for AI-powered analysis)
OPENAI_API_KEY=your_openai_key

# Optional: Google Gemini API (for AI-powered analysis)
GEMINI_API_KEY=your_gemini_key

# Optional: Champion Data API (advanced statistics)
CHAMPION_DATA_API_KEY=your_champion_data_key

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Docker/Kubernetes Configuration
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest

# Cloud Configuration (for GCP/AWS deployments)
GOOGLE_PROJECT_ID=your-project-id
GCP_REGION=us-central1
AWS_REGION=us-west-2
CLUSTER_NAME=afl-fantasy-cluster

# SSL Configuration (for production HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem